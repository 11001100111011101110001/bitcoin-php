<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="../vendor/autoload.php"
    colors="true">
    <testsuites>
        <testsuite name="Bitpay Package">
            <directory>../tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="docs/code-coverage"/>
    </logging>
</phpunit>
